<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/img2" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        android:text="武汉科技大学"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="55dp"
        android:text="陈洁 201813158009"
        android:textColor="#4D000000"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/img1"
        />

    <Button
        android:id="@+id/money"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/bottom_background"
        android:text="充值"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/text2"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:text="账户余额"
        android:textColor="#4D000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_below="@id/text3"
        android:layout_marginLeft="10dp"
        android:text="￥0.08"
        android:textSize="20sp" />

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#25454545"
        android:layout_below="@id/text4"/>


    <ImageView
        android:id="@+id/btn1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/pay"
        android:layout_marginTop="180dp"
        />

    <ImageView
        android:id="@+id/btn2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="180dp"
        android:layout_toRightOf="@id/btn1"
        android:background="@drawable/card" />

    <ImageView
        android:id="@+id/btn3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="180dp"
        android:layout_toRightOf="@id/btn2"
        android:background="@drawable/sweep" />

    <ImageView
        android:id="@+id/btn4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="180dp"
        android:layout_toRightOf="@id/btn3"
        android:background="@drawable/share" />

    <ImageView
        android:id="@+id/btn5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/btn1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/sort" />

    <ImageView
        android:id="@+id/btn6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/btn2"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="37dp"
        android:layout_toRightOf="@id/btn5"
        android:background="@drawable/service" />

    <ImageView
        android:id="@+id/btn7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/btn3"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@id/btn6"
        android:background="@drawable/search" />

    <ImageView
        android:id="@+id/btn8"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/btn4"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@id/btn7"
        android:background="@drawable/setting" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:layout_below="@id/btn1"
        android:layout_marginTop="3dp"
        android:text="缴费"
        android:layout_marginLeft="23dp"
        android:textSize="12sp" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:layout_below="@id/btn1"
        android:layout_marginLeft="113dp"
        android:layout_marginTop="3dp"
        android:text="卡包"
        android:textSize="12sp" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:layout_below="@id/btn1"
        android:layout_marginLeft="149dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/btn1"
        android:text="扫一扫"
        android:textSize="12sp" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:layout_below="@id/btn1"
        android:layout_marginLeft="151dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/btn2"
        android:text="分享"
        android:textSize="12sp" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:layout_below="@id/btn5"
        android:layout_marginLeft="-209dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/btn3"
        android:text="分类"
        android:textSize="12sp" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:layout_below="@id/btn5"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/btn5"
        android:text="客服"
        android:textSize="12sp" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:layout_below="@id/btn5"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/btn6"
        android:text="查找"
        android:textSize="12sp" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:layout_below="@id/btn5"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/btn7"
        android:text="设置"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:text="为你精选"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text5"
        android:layout_marginTop="5dp"
        android:background="#25454545" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:id="@+id/LV"
        android:entries="@array/intype">
    </ListView>



</RelativeLayout>